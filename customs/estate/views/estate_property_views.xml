<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <record id="estate_property_action" model="ir.actions.act_window">
    <field name="name">Properties</field>
    <field name="res_model">estate.property</field>
    <field name="view_mode">tree,form</field>
  </record>

  <record model="ir.ui.view" id="estate_property_view_tree">
    <field name="name">estate.property.tree</field>
    <field name="model">estate.property</field>
    <field name="arch" type="xml">
      <tree string="Property">
        <field name="name" />
        <field name="postcode" />
        <field name="bedrooms" />
        <field name="living_area" />
        <field name="gardern_area" string="Living Area(sqm)" />
        <field name="total_area" />
        <field name="expected_price" />
        <field name="selling_price" />
        <field name="date_availability" string="Available From" />
      </tree>
    </field>
  </record>

  <record model="ir.ui.view" id="estate_property_view_form">
    <field name="name">estate.property.form</field>
    <field name="model">estate.property</field>
    <field name="arch" type="xml">
      <form string="Property Create">
        <header>
          <!-- <button name="action_cancel" type="object" string="Cancel" attrs="{'invisible': ['|',
          ('state', 'not in', ['draft', 'sent','sale']), ('id', '=', False)]}" data-hotkey="z"/> -->
          <button name="action_sold_property" type="object" string="Sold"
            attrs="{'invisible': [('state','in',['new', 'canceled'])]}" />
          <button name="action_cancel_property" type="object" string="Cancel"
            attrs="{'invisible': [('state','!=','accepted')]}" />
          <field name="state" widget="statusbar" />
        </header>
        <sheet>
          <div class="oe_title">
            <h1>
              <field name="name" />
            </h1>
          </div>
          <group>
            <group>
              <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}" />
              <field name="property_type_id"
                options="{'no_quick_create':True,'no_create_edit': True}" />
              <field name="postcode" />
              <field name="expected_price" />
              <field name="best_price" string="Best Offer" />
            </group>
            <group>
              <field name="date_availability" />
              <field name="selling_price" />
            </group>
          </group>
          <notebook>
            <page string="Description">
              <group>
                <field name="description" />
                <field name="bedrooms" />
                <field name="facades" />
                <field name="living_area" />
                <field name="total_area" />
                <field name="garage" string="Garden"/>
              </group>
              <group string="Garden info" attrs="{'invisible': [('garage', '=',False)]}">
                <field name="gardern_area" string="Garden Area(sqm)" />
                <field name="gardern_orientation" string="Garden Orientation" />
              </group>
            </page>
            <page string="Offers">
              <group>
                <field name="offer_ids" string="" editable="true" attrs="{'readonly': [('state','in',['accepted','canceled','sold'])]}" />
              </group>
            </page>
            <page string="Other Info">
              <group>
                <field name="buyer_id" />
                <field name="salesperson_id" />
              </group>
            </page>
          </notebook>
        </sheet>
      </form>
    </field>
  </record>

  <record model="ir.ui.view" id="estate_property_search">
    <field name="name">estate.property.search</field>
    <field name="model">estate.property</field>
    <field name="arch" type="xml">
      <search string="Properties">
        <field name="name" />
        <field name="property_type_id" />
        <field name="postcode" />
        <field name="expected_price" />
        <field name="bedrooms" />
        <field name="facades" />

        <filter string="Available" name="property_available"
          domain="['|',('state','=','new'),('state','=','received')]" />
        <group expand="1" string="Group By">
          <filter string="Postcode" name="postcode" context="{'group_by':'postcode'}" />
        </group>
      </search>
    </field>
  </record>
</odoo>